<div class="view view-type-grid view-participants">
    <div class="view-content">

        {% for attendee in attendees %}
            {% set nickname = attendee.answer('drupal.org nickname') %}
            <div class="views-row view-mode-teaser">
                <div class="field field--name-featured-image">
                    <div class="field-items">
                        <div class="field-item"><img src="{{ attendee.avatar }}"/></div>
                    </div>
                </div>
                <div class="field field--name-name">
                    <div class="field-items">
                        <div class="field-item"><h3>{{ attendee.name }}</h3></div>
                    </div>
                </div>

                {% if attendee.answer('drupal.org nickname') %}
                    <div class="field field--name-nickname">
                        <div class="field-items">
                            <div class="field-item"><a href="https://www.drupal.org/u/{{ nickname }}">{{ nickname }}</a></div>
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endfor %}

    </div>
</div>
